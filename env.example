# Blockchain Configuration
POLYGON_RPC_URL=https://polygon-rpc.com
MUMBAI_RPC_URL=https://rpc-mumbai.maticvigil.com
PRIVATE_KEY=your_private_key_here
POLYGONSCAN_API_KEY=your_polygonscan_api_key_here

# Contract Addresses (deploy and update these)
BLUE_CARBON_REGISTRY_CONTRACT_ADDRESS=0x...
POLYGON_CHAIN_ID=137
MUMBAI_CHAIN_ID=80001

# API Configuration
API_BASE_URL=http://localhost:3001
API_TIMEOUT=30000

# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/bluecarbon_registry
REDIS_URL=redis://localhost:6379

# Authentication
JWT_SECRET=your_jwt_secret_here
JWT_EXPIRES_IN=7d
OTP_EXPIRES_IN=300

# File Storage
IPFS_GATEWAY_URL=https://ipfs.io/ipfs/
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_S3_BUCKET=bluecarbon-registry-files
AWS_REGION=ap-south-1

# Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password

# Mobile App Configuration
EXPO_PUBLIC_API_URL=http://localhost:3001
EXPO_PUBLIC_BLOCKCHAIN_NETWORK=polygon
EXPO_PUBLIC_CONTRACT_ADDRESS=0x...

# Development
NODE_ENV=development
LOG_LEVEL=debug
ENABLE_DEBUG_MODE=true

# Security
CORS_ORIGIN=http://localhost:3000,http://localhost:19006
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
